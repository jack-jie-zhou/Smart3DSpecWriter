<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2009/07/customui" onLoad="Ribbon_Load">
  <ribbon>
		  <tabs>
			  <tab id="CustomTab" label="My Custom Tab">
				  <group id="MyGroup" label="My Tools">
					  <button id="Button1"
							  label="My Button"
							  size="large"
							  imageMso="HappyFace"
							  onAction="Button1_Click"/>
					  <button id="Button2"
							  label="Another Button"
							  size="normal"
							  imageMso="Help"
							  onAction="Button2_Click"/>
				  </group>
			  </tab>
		  </tabs>
	  </ribbon>
</customUI>

